<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>SilverStripe solr Search</title>
    <parser>
        <target>solr-api</target>
        <encoding>utf8</encoding>
        <extensions>
            <extension>php</extension>
        </extensions>
    </parser>
    <transformer>
        <target>solr-api</target>
    </transformer>
    <transformations>
        <template name="responsive-twig" />
    </transformations>
    <files>
        <directory>solr</directory>
        <ignore>**/tests/**/*</ignore>
        <ignore>solr/**/tests/**/*</ignore>
    </files>
</phpdoc>
